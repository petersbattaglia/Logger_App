<Window x:Class="LoggerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="335.793" Width="525" x:Name="winLogWindow">
    <Grid>
        <ListBox x:Name="lbLogger" Margin="10,10,10,35" ItemsSource="{Binding Log, ElementName=winLogWindow}" VirtualizingPanel.IsVirtualizing="True" SelectionMode="Multiple">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="10,0,0,5" VerticalAlignment="Bottom" Width="75" Click="btnStart_Click"/>
        <Button x:Name="btnCopy" Content="Copy Selected Line(s)" HorizontalAlignment="Left" Margin="378,0,0,5" Width="129" Height="20" VerticalAlignment="Bottom" Click="btnCopy_Click"/>

    </Grid>
</Window>
